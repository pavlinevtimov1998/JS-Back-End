{{#with job}}
<section id="details-page">
    <article class="details-gage-title">
        <h1>Details Page</h1>
    </article>
    <article class="details-page-card">

        <article class="details-page-card-image">
            <img src="/static/img/man.png" alt="details-image">
        </article>
        <article class="details-page-card-content">
            <p>Author: {{_ownerId.email}}</p>
            <h2>Headline: {{headline}}</h2>
            <h3>Company name: {{companyName}}</h3>
            <h4>Company description: {{description}}</h4>
            <h5>Location: {{location}}</h5>

            <article class="details-page-card-buttons">

                {{#if user}}
                {{#if isOwner}}
                <a href="/jobs/edit/{{_id}}" class="btn-edit">Edit</a>
                <a href="/jobs/delete/{{_id}}" class="btn-delete">Delete</a>
                {{else}}
                {{#if isApplied}}
                <p class="already-applied">You have already applied!</p>
                {{else}}
                <a href="/jobs/apply/{{_id}}" class="btn-apply">Apply now!</a>
                <p class="applied-people">Hurry up, {{appliedCount}} people have already applied.</p>
                {{/if}}
                {{/if}}
                {{/if}}
            </article>
        </article>


    </article>
</section>

{{#if isOwner}}
<section id="info-about-candidates">
    <h2>Candidates for this ad:</h2>
    {{#each usersApplied}}
    <article class="info-about-candidates-card">
        <h2>Email: {{email}}</h2>
        <h3>Description of the candidate's skills: {{skils}}</h3>
    </article>
    {{/each}}
</section>
{{/if}}
{{/with}}