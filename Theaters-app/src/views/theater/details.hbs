<main>
    <div class="container">

        <section class="details">
            <h1>{{title}}</h1>
            <div>
                <img src="{{imageUrl}}" alt="{{title}}" width="400px">
            </div>
        </section>

        <section class="details">
            <h3>Theater Description</h3>
            <p>{{description}}</p>
            <div class="buttons">
                <a class="btn delete" href="/theater/delete">Delete</a>
                <a class="btn edit" href="/theater/edit/{{_id}}">Edit</a>
                {{#if isLiked}}
                <span class="liked">You have already liked this play!</span>
                {{else}}
                <a class="btn like" href="">Like</a>
                {{/if}}
            </div>
        </section>
    </div>
</main>