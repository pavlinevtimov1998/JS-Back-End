<form class="search" method="POST">
    <input type="search" name="type" placeholder="Search here...">
    <button type="submit">Search</button>
</form>
{{#if type}}
<section id="find-section">
    {{#if length}}
    {{#each offers}}
    <div class="card">
        <h3>{{this.name}}</h3>
        <p>{{this.description}}</p>
        <div class="cta-container"><a href="/offers/details/{{this._id}}" class="det-link">Details</a></div>
        <div class="card_circle"><img src="{{this.imageUrl}}"></div>
    </div>
    {{/each}}
    {{else}}
    <div class="no-data-listing">
        <p class="no-offer">No match was found for the submitted type...</p>
    </div>
    {{/if}}
</section>
{{/if}}